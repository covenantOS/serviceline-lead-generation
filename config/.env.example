# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/leads
MONGO_URI=mongodb://localhost:27017/serviceline
DB_TYPE=postgresql

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Email Service Configuration
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=leads@yourcompany.com
FROM_NAME=Your Company Name

# Authentication
JWT_SECRET=your_very_secure_jwt_secret_key_here
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10

# Scraping Configuration
SCRAPE_INTERVAL=24h
MAX_CONCURRENT_SCRAPES=5
SCRAPE_TIMEOUT=30000
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
HEADLESS_BROWSER=true
REQUEST_DELAY=1000

# Lead Scoring
MIN_SCORE_THRESHOLD=60
AUTO_EMAIL_THRESHOLD=80

# API Configuration
PORT=3000
NODE_ENV=development
API_RATE_LIMIT=100
API_RATE_WINDOW=15min

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Cron Jobs
ENABLE_CRON=true
SCRAPE_CRON_SCHEDULE=0 2 * * *
EMAIL_CRON_SCHEDULE=0 9 * * *

# ServiceLine Specific
SERVICELINE_URL=https://www.serviceline.com
SERVICELINE_API_KEY=your_serviceline_api_key

# Optional: Data Enrichment APIs
CLEARBIT_API_KEY=
HUNTER_API_KEY=
ZOOMINFO_API_KEY=

# Google APIs (optional for enhanced scraping)
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# Yelp API (optional)
YELP_API_KEY=
