# ============================================
# ServiceLine Autonomous Lead Generation System
# Environment Configuration
# ============================================

# ----------------
# Database Configuration
# ----------------
DATABASE_URL=postgresql://user:password@localhost:5432/leads
MONGO_URI=mongodb://localhost:27017/serviceline
DB_TYPE=postgresql

# ----------------
# Supabase Configuration
# ----------------
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_key

# ----------------
# Redis Configuration (Required for Queue System)
# ----------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ----------------
# Email Service Configuration
# ----------------
EMAIL_SERVICE=sendgrid
SENDGRID_API_KEY=your_sendgrid_api_key
MAILGUN_API_KEY=your_mailgun_api_key
MAILGUN_DOMAIN=your_mailgun_domain
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password
FROM_EMAIL=leads@yourcompany.com
FROM_NAME=ServiceLine
SENDER_PHONE=555-123-4567

# ----------------
# Authentication
# ----------------
JWT_SECRET=your_very_secure_jwt_secret_key_here_change_this_in_production
JWT_EXPIRY=7d
BCRYPT_ROUNDS=10

# ----------------
# Scraping Configuration
# ----------------
SCRAPE_INTERVAL=24h
MAX_CONCURRENT_SCRAPES=5
SCRAPE_TIMEOUT=30000
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
HEADLESS_BROWSER=true
REQUEST_DELAY=1000

# ----------------
# Autonomous Operation Configuration
# ----------------
# Enable/disable cron jobs
ENABLE_CRON=true

# Cron schedules (crontab format)
SCRAPE_CRON_SCHEDULE=0 2 * * *
EMAIL_CRON_SCHEDULE=0 9 * * 1-5

# Target industries for automated scraping
TARGET_INDUSTRIES=HVAC,PLUMBING,ROOFING,ELECTRICAL

# Target locations for automated scraping
TARGET_LOCATIONS=Phoenix AZ,Los Angeles CA,Houston TX,Miami FL,Atlanta GA

# ----------------
# Lead Scoring & Campaign Automation
# ----------------
MIN_SCORE_THRESHOLD=60
AUTO_EMAIL_THRESHOLD=80

# Follow-up sequence delays (in days)
FOLLOWUP_1_DELAY=3
FOLLOWUP_2_DELAY=7
CASE_STUDY_DELAY=14

# ----------------
# API Configuration
# ----------------
PORT=3000
NODE_ENV=development
API_RATE_LIMIT=100
API_RATE_WINDOW=15min
CORS_ORIGIN=*

# ----------------
# Logging
# ----------------
LOG_LEVEL=info
LOG_FILE=logs/app.log

# ----------------
# ServiceLine Specific
# ----------------
SERVICELINE_URL=https://www.serviceline.com
SERVICELINE_API_KEY=your_serviceline_api_key

# ----------------
# Data Enrichment APIs (Optional)
# ----------------
CLEARBIT_API_KEY=
HUNTER_API_KEY=
ZOOMINFO_API_KEY=

# ----------------
# Google APIs (Optional - for enhanced scraping)
# ----------------
GOOGLE_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# ----------------
# Yelp API (Optional)
# ----------------
YELP_API_KEY=

# ----------------
# Monitoring & Alerts (Optional)
# ----------------
SENTRY_DSN=
SLACK_WEBHOOK_URL=
ALERT_EMAIL=admin@yourcompany.com

# ----------------
# Timezone
# ----------------
TZ=America/New_York
